@model CarEditViewModel

@{
    ViewBag.Title = "Edit Car";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    var Images = "~/images/" + (Model.ExistingImage ?? "gdCar.jpg");
}

<form enctype="multipart/form-data" asp-controller="Car" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingImage" />
    <div class="form-group row">
        <label asp-for="CarDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CarDescription" class="form-control" placeholder="CarDescription" />
            <span asp-validation-for="CarDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Model" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Model" class="form-control" placeholder="Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="BrandName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="BrandName" class="form-control" placeholder="BrandName" />
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Color" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Color" class="form-control" placeholder="Color" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Transmission" 
            asp-items="Html.GetEnumSelectList<Transmission>()"
            class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Transmission" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Condition" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Condition" 
            asp-items="Html.GetEnumSelectList<Condition>()"
            class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Condition" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="FuelType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="FuelType" 
            asp-items="Html.GetEnumSelectList<FuelType>()"
            class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="GearType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="GearType" 
            asp-items="Html.GetEnumSelectList<GearType>()"
            class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="GearType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="BodyType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="BodyType" class="form-control" placeholder="BodyType" />
            <span asp-validation-for="BodyType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="EngineType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="EngineType" 
            asp-items="Html.GetEnumSelectList<EngineType>()"
            class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="EngineType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="NoOfSeats" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NoOfSeats" class="form-control" placeholder="NoOfSeats" />
            <span asp-validation-for="NoOfSeats" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Mileage" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Mileage" class="form-control" placeholder="Mileage" />
            <span asp-validation-for="Mileage" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Category" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Category" 
            asp-items="Html.GetEnumSelectList<Category>()"
            class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="SteeringType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="SteeringType" 
            asp-items="Html.GetEnumSelectList<SteeringType>()"
            class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="SteeringType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Images" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input multiple asp-for="Images" class="form-control custom-file-input"/>
                <label class="custom-file-label">Click here to change photo..</label>
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img src="@Images" style="height: 200px; width:auto;"
        asp-append-version="true" />
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row" >
        <div class="col-sm-auto">
            <button type="submit" class="btn btn-primary" style="width: 80px;margin-top: 10px;">Update</button>
        </div>
        <div class="col-sm-auto">
            <a asp-action="Index" asp-controller="Car" class="btn btn-primary" style="width: 80px;margin-top: 10px;">Cancel</a>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function(){
                $(".custom-file-input").on("change", function(){
                    var fileLabel = $(this).next('.custom-file-label');
                    var files = $(this)[0].files;
                    if(files.length > 1){
                        fileLabel.html(files.length + ' files selected');
                    }
                    else if(files.length == 1){
                        fileLabel.html(files[0].name);
                    }
                });
            });
        </script>
    }

</form>

