@model IEnumerable<Car>

@{
    ViewBag.Title = "Admin Car home";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<a asp-action="Create" asp-controller="Car">Add New Car</a>
<h3>Add Existing Car</h3>


<h1 class=" text-center">Cars</h1>
<div class="cartable">
    <table class="table table-hover table-striped table-dark">
        <thead>
            <tr>
                <th>
                    Category
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Model
                </th>
                <th>
                    Price
                </th>
                <th>
                    Photo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                var Images = "~/images/" + (car.Images ?? "gdCar.jpg");
                //var del = "#deletemodal" + item.CarID;
                <tr>
                    <td>
                        @car.Category
                    </td>
                    <td>
                        @car.BrandName
                    </td>
                    <td>
                        @car.Model
                    </td>
                    <td>
                        @car.Price
                    </td>
                    <td>
                        <img style="width:100px; height:60px;" src="@Images" alt="No Image" asp-append-version="true" />
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Car" asp-route-id="@car.CarID">Details</a> |
                        <a asp-action="Edit" asp-controller="Car" asp-route-id="@car.CarID">Edit</a> |
                        <a asp-action="Delete" asp-controller="Car" asp-route-id="@car.CarID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>