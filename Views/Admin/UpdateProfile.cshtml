@model ProfileViewModel
@inject SignInManager<UpdateUser> signInManager;

@{
    ViewBag.Title = "Update Profile";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1 style="color: white; text-align:center;">Update Profile Information</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="UpdateProfile" asp-controller="Admin" method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Images" class="form-control custom-file-input" id="customFile" />
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>              
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group row" >
                <div class="col-sm-auto">
                    <button type="submit" class="btn btn-primary" style="width: 80px;margin-top: 10px;">Submit</button>
                </div>
                <div class="col-sm-auto">
                    <a asp-action="Profile" asp-controller="Admin" class="btn btn-primary" style="width: 80px;margin-top: 10px;">Cancel</a>
                </div>
            </div>
            @section Scripts{
                <script>
                    $(document).ready(function(){
                        $(".custom-file-input").on("change", function(){
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>