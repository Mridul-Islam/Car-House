@model ProfileViewModel
@inject SignInManager<UpdateUser> signInManager;

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    var pp = "~/images/" + (Model.ProfilePicture ?? "gdCar.jpg");
    @* var pp = "~/images/" + (Model.updateUser.ProfilePicture ?? "gdCar.jpg"); *@
}
@if(signInManager.IsSignedIn(User)){
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserID)
        </dd>
        <div class="card m-auto col-md-6 col-lg-4 col-sm-12 mt-2">
            <div class="card-body">
                <img src="@pp" class="" style="width:100%;" alt="No Image" asp-append-version="true" />
            </div>
        </div>
        
    </dl>
    
    <form asp-action="DeleteUser" asp-controller="admin">
        <input type="hidden" asp-for="@User.Identity.Name" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Profile" asp-controller="Admin" asp-route-name="@User.Identity.Name">Back to Profile</a>
    </form>
</div>
}